{
  "compilerOptions": {
    "outDir": "dist",
    "lib": ["es2017"],
    "target": "es2017",
    "module": "commonjs",
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictBindCallApply": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "inlineSources": true,
    "sourceRoot": "/"
  },
  "include": [
    "src/**/*.ts"
  ]
}
